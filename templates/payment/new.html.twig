{% extends 'base.html.twig' %}


{% block body %}
    <div class="app-content content">
      <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body"><!-- ICO Token &  Distribution-->
<div class="row match-height">
    <div id="recent-transactions" class="col-12">
        <h6 class="my-2">Payment</h6>
        <div class="card">
            <div class="card-content">
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            {{ form_start(form, {'attr': {'class': 'contact-us', 'novalidate': 'novalidate'}}) }}
            <div class="row">
                <div class="col-md-6">
                    <label for="nom">nom</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'nom'}}) }}
                    {% if form_errors(form.nom) is not empty %}
                        <div class="alert alert-danger">{{ form_errors(form.nom) }}</div>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <label for="amount">amount</label>
                    {{ form_widget(form.amount, {'attr': {'class': 'form-control', 'placeholder': 'amount'}}) }}
                    {% if form_errors(form.amount) is not empty %}
                        <div class="alert alert-danger">{{ form_errors(form.amount) }}</div>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <label for="id">id</label>
                    {{ form_widget(form.id, {'attr': {'class': 'form-control', 'placeholder': 'id'}}) }}
                    {% if form_errors(form.id) is not empty %}
                        <div class="alert alert-danger">{{ form_errors(form.id) }}</div>
                    {% endif %}
                </div>
                 <div class="col-md-6">
                    <label for="waletID">waletID</label>
                    {{ form_widget(form.waletID, {'attr': {'class': 'form-control', 'placeholder': 'waletID'}}) }}
                    {% if form_errors(form.waletID) is not empty %}
                        <div class="alert alert-danger">{{ form_errors(form.waletIDId) }}</div>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <label for="transactionId">TransactionId</label>
                    {{ form_widget(form.transactionId, {'attr': {'class': 'form-control', 'placeholder': 'TransactionId'}}) }}
                    {% if form_errors(form.transactionId) is not empty %}
                        <div class="alert alert-danger">{{ form_errors(form.transactionId) }}</div>
                    {% endif %}
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-danger btn-buy-now">Add</button>
            {{ form_end(form) }}
            <br><br>
            <a class="btn btn-danger btn-buy-now" href="{{ path('app_payment_index') }}">back to list</a>
            <br><br>
            <form action="{{ path('checkout') }}" method="POST">
                <button type="submit" class="btn btn-outline-success">Checkout</button>
            </form>
        </div>
    </div>
    </div>
    </div>
</div>
</div>
</div>
</div>
</div>
{% endblock %}
