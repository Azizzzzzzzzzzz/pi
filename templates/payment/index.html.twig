{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row match-height">
        <div id="recent-transactions" class="col-12">
            <h6 class="my-2">Payment</h6>
            <div class="card">
                <div class="card-content">
                    <div class="table-responsive">
                        <table id="recent-orders" class="table table-hover table-xl mb-0">
                            <thead>
                                <tr>
                                    <th class="border-top-0">Nom</th>
                                    <th class="border-top-0">Amount</th>
                                    <th class="border-top-0">WaletID</th>
                                    <th class="border-top-0">transactionId</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for payment in payments %}
                                <tr>
                                    <td class="text-truncate"><i class="la la-dot-circle-o success font-medium-1 mr-1"></i> {{ payment.nom }}</td>
                                    <td class="text-truncate">{{ payment.amount }}</td>
                                    <td class="text-truncate">{{ payment.waletID }}</td>
                                    <td class="text-truncate">{{ payment.transactionId }}</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {{ include('payment/_delete_form.html.twig') }}
                                            <div style="position: relative;left:30px;">
                                                <a href="{{ path('app_payment_edit', {'id': payment.id}) }}" class="btn btn-outline-success">Edit</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <a href="{{ path('app_payment_new') }}" class="btn btn-outline-success">Create new</a>

                </div>
            </div>
        </div>
    </div>
</div>

{% for type, messages in app.flashes() %}
    {% for message in messages %}
        <div class="alert alert-{{ type }}">{{ message }}</div>
    {% endfor %}
{% endfor %}
{% endblock %}
